<%- include('header'); %>

<div id="content">
    <div class="flex-grid">
    <% for (var i = 0; i < articles.length; i++) { %>
        <a href='<%= "/articles/" + articles[i].slug %>' class="column card">
            <img src="<%= articles[i].image %>" onerror="this.src = 'http://via.placeholder.com/1200x742'">

            <div class="card-container">
                <h3>
                    <%= articles[i].title %>
                </h3>
                <h4>
                    <%= articles[i].date %>
                </h4>
            </div>
        </a>
    <% } %>
    </ul>
</div>
<%- include('footer'); %>
